<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstruksiActivity">
    <ScrollView
        android:id="@+id/content_isi2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:paddingBottom="24dp"
        android:scrollbars="none"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/top_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/bg_top"
                android:paddingVertical="53dp"
                android:paddingHorizontal="24dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_back"
                    android:layout_marginEnd="13dp"
                    android:orientation="vertical">
                </ImageView>
                <TextView
                    android:id="@+id/title"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="@string/home_fitur2"
                    android:fontFamily="@font/plusjakartasans_semibold"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingVertical="29dp"
                android:paddingHorizontal="26dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title_2"
                    android:textColor="@color/blue_text"
                    android:textSize="16sp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/instruksi_test"
                    android:fontFamily="@font/plusjakartasans_semibold"
                    />

                <ImageView
                    android:id="@+id/contoh"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="11dp"
                    android:src="@drawable/test_example" />

                <TextView
                    android:id="@+id/text1"
                    android:textColor="@color/black_text"
                    android:textSize="12sp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textAlignment="viewStart"
                    android:justificationMode="inter_word"
                    android:text="@string/penjelasan"
                    android:fontFamily="@font/plusjakartasans_regular" />
                <TextView
                    android:id="@+id/text2"
                    android:textColor="@color/black_text"
                    android:textSize="12sp"
                    android:layout_marginBottom="18dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textAlignment="viewStart"
                    android:justificationMode="inter_word"
                    android:text="@string/ishihara"
                    android:fontFamily="@font/plusjakartasans_regular"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
