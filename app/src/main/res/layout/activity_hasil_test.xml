<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Test.HasilTestActivity">
    <ScrollView
        android:id="@+id/content_hasiltest"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:scrollbars="none"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/test_nav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/bg_top"
                android:paddingVertical="53dp"
                android:paddingHorizontal="24dp"
                android:layout_marginBottom="70dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/exit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_back"
                    android:layout_marginEnd="12dp"
                    android:orientation="vertical">
                </LinearLayout>
                <TextView
                    android:id="@+id/test_title"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="@string/test_title"
                    android:fontFamily="@font/plusjakartasans_semibold"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_flag"
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="88dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/vbenar"
                android:textColor="@color/black_text"
                android:textSize="12sp"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:text="@string/test_vbenar"
                android:fontFamily="@font/plusjakartasans_regular"
                />
            <TextView
                android:id="@+id/hasil"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:text="@string/hasiltest_yesno"
                android:fontFamily="@font/plusjakartasans_semibold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="22dp"
                android:layout_marginHorizontal="94dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/sebelumnya"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_prev"
                    android:orientation="vertical">
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:id="@+id/cobalagi"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_restart"
                    android:orientation="vertical">
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:id="@+id/selanjutnya"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_next"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/content_isi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_fitur"
                android:paddingVertical="23dp"
                android:paddingHorizontal="20dp"
                android:layout_marginHorizontal="22dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/isi"
                    android:textColor="@color/black_text"
                    android:textSize="12sp"
                    android:layout_marginBottom="12dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/test_ket1"
                    android:fontFamily="@font/plusjakartasans_medium"
                    />
                <TextView
                    android:id="@+id/isi2"
                    android:textColor="@color/black_text"
                    android:textSize="12sp"
                    android:layout_marginBottom="12dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/test_ket2"
                    android:fontFamily="@font/plusjakartasans_medium"
                    />
                <TextView
                    android:id="@+id/isi3"
                    android:textColor="@color/black_text"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/test_ket3"
                    android:fontFamily="@font/plusjakartasans_medium"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>