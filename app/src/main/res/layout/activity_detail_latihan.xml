<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Test.TestActivity">
    <ScrollView
        android:id="@+id/content_latihan1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:paddingBottom="100dp"
        android:scrollbars="none"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/latihan1_nav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/bg_top"
                android:paddingVertical="53dp"
                android:paddingHorizontal="24dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ic_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_back"
                    android:layout_marginEnd="13dp"
                    android:orientation="vertical">
                </LinearLayout>
                <TextView
                    android:id="@+id/latihan1_title"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="@string/latihan1_title"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/latihan1_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingVertical="28dp">

                <TextView
                    android:id="@+id/instruksi_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/instruksi_title"
                    android:textColor="@color/blue_text"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/latihan1_instruksi1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginBottom="18dp"
                    android:text="@string/instruksi1"
                    android:textColor="@color/black_text"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/instruksi_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginBottom="36dp"
                    android:layout_weight="1"
                    android:text="@string/instruksi3"
                    android:textColor="@color/black_text"
                    android:textSize="12sp"
                    android:orientation="horizontal" />

<!--                <TextView-->
<!--                    android:id="@+id/instruksi3"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginHorizontal="25dp"-->
<!--                    android:layout_marginBottom="36dp"-->
<!--                    android:layout_weight="1"-->
<!--                    android:text="@string/instruksi3"-->
<!--                    android:textColor="@color/black_text"-->
<!--                    android:textSize="12sp" />-->

                <ImageView
                    android:id="@+id/latihan1_gambar"
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    android:layout_marginHorizontal="42dp"
                    android:layout_marginBottom="32dp"
                    android:background="@color/black"
                    android:orientation="vertical">
                </ImageView>

                <TextView
                    android:id="@+id/manfaat_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/manfaat_title"
                    android:textColor="@color/blue_text"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/manfaat1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginBottom="18dp"
                    android:text="@string/manfaat1"
                    android:textColor="@color/black_text"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/manfaat_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginBottom="36dp"
                    android:layout_weight="1"
                    android:text="@string/instruksi3"
                    android:textColor="@color/black_text"
                    android:textSize="12sp"
                    android:orientation="horizontal" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
