<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Test.TestActivity">


    <ScrollView
        android:id="@+id/roof8vnuwl1l"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:scrollbars="none"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/test_nav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/bg_top"
                android:paddingVertical="53dp"
                android:paddingHorizontal="24dp"
                android:layout_marginBottom="74dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/exit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_back"
                    android:layout_marginEnd="13dp"
                    android:orientation="vertical">
                </LinearLayout>
                <TextView
                    android:id="@+id/test_title"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="@string/test_title"
                    android:fontFamily="@font/plusjakartasans_semibold"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/pertanyaan"
                android:textColor="@color/black_text"
                android:textSize="16sp"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:text="Apa yang kamu lihat di plate tes?"
                android:fontFamily="@font/plusjakartasans_semibold"
                />
            <ImageView
                android:id="@+id/iv_flag"
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:layout_marginBottom="23dp"
                android:layout_marginHorizontal="88dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/vbenar"
                android:textColor="@color/black_text"
                android:textSize="12sp"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:text="Benar : 0/10"
                android:fontFamily="@font/plusjakartasans_regular"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="23dp"
                android:layout_marginHorizontal="32dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/b_answer1"
                        android:layout_width="134dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_fitur"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="Tidak ada angka"
                        android:fontFamily="@font/plusjakartasans_medium"
                        android:textAllCaps="false"
                        android:textColor="@color/black_text"
                        android:textSize="12sp" />
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/b_answer2"
                        android:layout_width="134dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_fitur"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="42"
                        android:fontFamily="@font/plusjakartasans_medium"
                        android:textAllCaps="false"
                        android:textColor="@color/black_text"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="32dp"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/b_answer3"
                        android:layout_width="134dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_fitur"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="2"
                        android:fontFamily="@font/plusjakartasans_medium"
                        android:textAllCaps="false"
                        android:textColor="@color/black_text"
                        android:textSize="12sp" />
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/b_answer4"
                        android:layout_width="134dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_fitur"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="72"
                        android:fontFamily="@font/plusjakartasans_medium"
                        android:textAllCaps="false"
                        android:textColor="@color/black_text"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
