<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="20dp"
    android:background="@drawable/border_gray"
    android:orientation="horizontal"
    android:padding="10dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="17dp"
        android:scaleType="fitXY"
        app:shapeAppearanceOverlay="@style/RoundedImageViewStyle"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:id="@+id/r4k7s6p971kh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textColor="#292D32"
            android:textSize="14sp"
            tools:text="Get regular eye check-ups"
            android:fontFamily="@font/plusjakartasans_semibold"/>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#292D32"
            android:textSize="12sp"
            android:fontFamily="@font/plusjakartasans_light"
            tools:text="Schedule regular visits to an eye specialist to monitor your eye health. Early detection of conditions like glaucoma and cataracts can significantly improve the chances of successful treatment." />
    </LinearLayout>
</LinearLayout>