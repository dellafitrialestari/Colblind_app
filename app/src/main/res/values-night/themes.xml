<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Eye_app" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your night theme here. -->

    </style>

    <style name="Theme.Eye_app" parent="Base.Theme.Eye_app" />

    <style name="CustomTabTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/plusjakartasans_extrabold</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">@color/blue_text</item>
        <item name="colorSecondary">@color/blue_text</item>
    </style>

    <style name="RoundedImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item> <!-- Adjust the radius as needed -->
    </style>

    <style name="BottomNavigationViewActiveTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/plusjakartasans_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomNavigationViewInactiveTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/plusjakartasans_medium</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>